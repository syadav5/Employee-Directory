<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_8"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_8"
    tools:context=".controllers.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_bg_color"
        android:padding="@dimen/margin_8">

        <ImageView
            android:id="@+id/empImg"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@drawable/ic_sad_face"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_sad_face"
            android:importantForAccessibility="no"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/empName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/headline_color"
            android:textSize="@dimen/text_size_15"
            android:layout_marginStart="@dimen/margin_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/empImg"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Justine Mason" />
        <TextView
            android:id="@+id/empTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_18"
            android:textColor ="@color/content_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/empImg"
            app:layout_constraintTop_toBottomOf="@id/empName"
            android:textSize="@dimen/text_size_15"
            tools:text="Point Of sale" />

        <TextView
            android:id="@+id/empPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_18"
            android:textColor ="@color/content_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/empImg"
            app:layout_constraintTop_toBottomOf="@id/empTeam"
            android:textSize="@dimen/text_size_15"
            tools:text="123 456 8980" />
        <TextView
            android:id="@+id/empEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_18"
            android:textColor ="@color/content_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/empImg"
            app:layout_constraintTop_toBottomOf="@id/empPhone"
            android:textSize="@dimen/text_size_15"
            tools:text="abc@gmail.com" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>